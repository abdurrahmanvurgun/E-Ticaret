@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Rezervasyon Ekleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Ad Soyad</label>
                                <input type="text" class="form-control form-control-lg" asp-for="Name" id="Name" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Telefon</label>
                                <input type="number" class="form-control form-control-lg" asp-for="Phone" id="Phone" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail Adresi</label>
                                <input type="email" class="form-control form-control-lg" asp-for="Mail" id="Mail" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="PersonCount">Kişi Sayısı</label>
                                <input type="text" class="form-control form-control-lg" asp-for="PersonCount" id="PersonCount" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="Date">Rezervasyon Tarihi</label>
                                <input type="date" class="form-control form-control-lg" asp-for="Date" id="Date" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control form-control-lg" asp-for="Description" id="Description" placeholder="">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Rezervasyonu Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>