@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Anasayfa İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İletişim Yazısı Ekleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="ContactID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Location">Lokasyon Giriniz</label>
                                <input type="text" class="form-control form-control-lg" asp-for="Location" id="Location" placeholder="Locasyon">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Telefon Numarası Giriniz</label>
                                <input type="number" class="form-control form-control-lg" asp-for="Phone" id="Phone" placeholder="Phone">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail Adresi Giriniz</label>
                                <input type="email" class="form-control form-control-lg" asp-for="Mail" id="Mail" placeholder="Mail">
                            </div>
                            <div class="form-group">
                                <label for="FooterDescription">Açıklama</label>
                                <textarea cols="5" rows="5" class="form-control form-control-lg" asp-for="FooterDescription" id="FooterDescription" placeholder="Açıklama Giriniz"></textarea>

                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">İletişim Yazısı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>