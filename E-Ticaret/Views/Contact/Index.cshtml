@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">AnaSayfa Alt İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">Hakkımızda alanıyla ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece 1 tane İletişim alanı oluşturmayı unutmayın.</div>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Konum</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Mail</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactID</td>
                                        <td>@item.Location</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Mail</td>
                                        <td>@item.FooterDescription</td>
                                        <td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Contact/CreateContact/" class="btn btn-outline-primary"><i class="fa fa-plus"></i> Yeni İletişim Yazısı Ekle </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>