@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Müşteri Yorum İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Yorum Güncelleme Sayfası</div>
                        </div>
                        <input type="hidden" asp-for="TestimonialID" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Müşteri Adı ve Soyadı</label>
                                <input type="text" class="form-control form-control-lg" asp-for="Name" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="Title">Müşteri Ünvanı</label>
                                <input type="text" class="form-control form-control-lg" asp-for="Title" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Müşteri Resim Dosyası Ekle</label>
                                <input type="text" class="form-control form-control-lg" asp-for="ImageUrl" id="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="Comment">Müşteri Yorumunu Giriniz</label>
                                <input type="text" class="form-control form-control-lg" asp-for="Comment" id="Comment">
                            </div>
                        </div>
                        <div class="card-action">
                            <button type="submit" class="btn btn-primary">Yorumu Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>